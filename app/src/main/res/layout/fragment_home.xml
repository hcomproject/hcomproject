<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context=".Activity.MainActivity"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout android:background="@drawable/accent_border_fill"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="안녕, 내 이름은 집중이!"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView android:background="@drawable/chat_box"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:rotation="180"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/brain"
            android:id="@+id/main_logo"/>

        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="오늘도 열공해보자!"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:textColor="@color/colorGray"
            android:textSize="22dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="70dp"
            android:background="@color/colorAccent">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@drawable/primary_border_fill">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="오늘 총 학습시간"
                        android:textAlignment="center"
                        android:textColor="@color/colorGray"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="241dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="00:00:00"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:id="@+id/txt_time"
                        />

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/accent_border_fill"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="50px"
                        android:text="START!" />
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/data780TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="[d780]"/>
            </ScrollView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/data780mTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="[m780]"/>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>