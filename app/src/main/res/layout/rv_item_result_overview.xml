<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">
    <LinearLayout
        android:id="@+id/ll_rv_item_result_overview_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_rv_item_product_overview_date"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginVertical="5dp"
            android:layout_marginBottom="5dp"
            android:text="dd:ddc"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_rv_item_product_overview_timer"
                android:textSize="15dp"
                android:textStyle="bold" android:textColor="@color/colorBlack"
                android:text="타이머 시간"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txt_rv_item_product_overview_timer_time"
                android:textSize="15dp"
                android:textColor="@color/colorGray" android:text="time"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_rv_item_product_overview_real_focus"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="실제 집중 시간"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_rv_item_product_overview_real_focus_time"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:text="time"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_rv_item_product_overview_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginVertical="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:text="76"
        android:textColor="@color/colorAccent"
        android:textSize="60dp"
        android:textStyle="bold" />

</LinearLayout>
